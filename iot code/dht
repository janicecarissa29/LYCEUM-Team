#include <WiFi.h>
#include <Firebase_ESP_Client.h>
#include <addons/TokenHelper.h>
#include <time.h>
#include <DHT.h>

const int DHTPIN = 4;
const int DHTTYPE = DHT11;
DHT dht(DHTPIN, DHTTYPE);

int timestamp;
const char*ntpServer = "pool.ntp.org";


const String USER_EMAIL = "elgasukaviola123@gmail.com";
const String USER_PASSWORD = "elgasukaviola";
const String API_KEY = "AIzaSyDMIuF_KtGeIUYBAw-TxQOHlDm09iLfExY";
const String DATABASE_URL = "https://lyceum-87240-default-rtdb.asia-southeast1.firebasedatabase.app/";

const String WIFI_SSID = "Tin";
const String WIFI_PASSWORD = "Haloguys";

String uid;
FirebaseData fbdo;
FirebaseAuth auth;
FirebaseConfig config;
FirebaseJson json;

void initwifi(){
   //kneksi ke wifi
  WiFi.begin(WIFI_SSID, WIFI_PASSWORD);

  Serial.print("Connecting to WiFi...");

  while (WiFi.status() != WL_CONNECTED) {
    Serial.print(".");
    delay(1000);
  }
  Serial.println(WiFi.localIP());

}

unsigned long getTime(){
  time_t now;
  
  Serial.print("Getting time");
  while(now < (24*3600)) {
    Serial.print(".");
    now = time(nullptr);
    delay(1000);
  }

  Serial.println("");
  return now;
}

void setup() {
  Serial.begin(9600);

  initwifi();

  dht.begin();

  configTime(0, 0, ntpServer);
  
  config.database_url = DATABASE_URL;
  config.api_key = API_KEY;
  auth.user.email = USER_EMAIL;
  auth.user.password = USER_PASSWORD;

  Firebase.reconnectWiFi(true);
  fbdo.setResponseSize(4096);

  config.token_status_callback = tokenStatusCallback;
  config.max_token_generation_retry = 5;

  Firebase.begin(&config, &auth);

  Serial.println("Getting User Id");
  while (auth.token.uid == "") {
    Serial.print(".");

  }
  uid = auth.token.uid.c_str();
  Serial.print("User Id : ");
  Serial.println(uid);

 
}

void loop() {
  // put your main code here, to run repeatedly:
     timestamp = getTime();

  float temperature = dht.readTemperature();
  float humidity = dht.readHumidity();

  if (isnan(humidity) || isnan(temperature)) {
      Serial.println("Failed to read from DHT sensor!");
      return;
  }

  Serial.print("Temperature : ");
  Serial.print(temperature);
  Serial.print(" Humidity : ");
  Serial.print(humidity);

  String path = "/dht sensor/";
  json.set("Temperature", temperature);
  json.set("Humidity", humidity);
  Serial.println("Set Json...");
  Serial.println(Firebase.RTDB.setJSON(&fbdo, path.c_str(), &json) ? "Success" : fbdo.errorReason().c_str());

  Serial.println(timestamp);
  delay(1000);
}